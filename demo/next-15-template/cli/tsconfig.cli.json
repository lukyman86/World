{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/cli",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "resolveJsonModule": true
  },
  "include": ["./cli.ts"],
  "exclude": ["../node_modules", "../dist", "../.next", "../src", "../public"]
}
