{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "next"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "typeRoots": ["node_modules/@types"],
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next", ".turbo"]
}
